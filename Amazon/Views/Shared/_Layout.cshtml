<!DOCTYPE html>
@*<link href="~/lib/css/StyleSheet.css" rel="stylesheet" />*@
<html>
<head>
    <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/lib/font-awesome/css/all.min.css" rel="stylesheet" />

    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
@*this is my shared layout page that is applied to all pages*@
<body style="text-align: center">

    <div class="bg-dark text-white p-2">
        <span class="navbar-brand m-lg-2">Amazon Book List</span>

        @*navigation bar*@
    <div id="nav">

        <div class="container-fluid">

            <div class="row">
                <nav id="nav">
                    <a asp-controller="Home" asp-action="Index" id="a">Home</a>
                </nav>
                <div class="col-6 text-right">
                    <vc:cart-summary />
                </div>
            </div>
        </div>
    </div>
    </div>
    <div class="row m-1 p-1">
        <div id="types" class="col-3">
            <vc:types></vc:types>
        </div>
        <div class="col-9">
            <div>
                @RenderBody()
            </div>
        </div>
    </div>

        <footer>
            <br />
            <p>Thank you for visiting my online book store</p>
            <br />
        </footer>
</body>
</html>
